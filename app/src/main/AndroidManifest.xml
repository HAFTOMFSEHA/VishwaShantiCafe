        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.VishwaShantiCafe">

        <activity android:name="com.miu.vishwashanticafe.ContactUsActivity"></activity>
        <activity android:name="com.miu.vishwashanticafe.SettingsActivity" />
        <activity android:name="com.miu.vishwashanticafe.MyCurrentOrdersActivity" />
        <activity android:name="com.miu.vishwashanticafe.OrdersHistoryActivity" />
        <activity android:name="com.miu.vishwashanticafe.LoginUserActivity" />
